rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // Helper function to check if user owns the resource
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }
    
    // Helper function to check if user is admin
    function isAdmin() {
      return isAuthenticated() && request.auth.token.role == 'admin';
    }
    
    // Helper function to check if user is researcher
    function isResearcher() {
      return isAuthenticated() && 
             (request.auth.token.role == 'researcher' || 
              request.auth.token.role == 'admin');
    }
    
    // Users collection
    match /users/{userId} {
      // Users can read and write their own profile
      // Admins can read/write any profile
      allow read: if isOwner(userId) || isAdmin();
      allow create: if isAuthenticated();
      allow update: if isOwner(userId) || isAdmin();
      allow delete: if isAdmin();
      
      // Children subcollection
      match /children/{childId} {
        // Users can manage their own children
        // Admins can access all children
        allow read: if isOwner(userId) || isAdmin() || isResearcher();
        allow create: if isOwner(userId);
        allow update: if isOwner(userId) || isAdmin();
        allow delete: if isOwner(userId) || isAdmin();
        
        // Assessments subcollection
        match /assessments/{assessmentId} {
          // Users can manage their own children's assessments
          // Admins and researchers can read all assessments
          allow read: if isOwner(userId) || isAdmin() || isResearcher();
          allow create: if isOwner(userId);
          allow update: if isOwner(userId) || isAdmin();
          allow delete: if isOwner(userId) || isAdmin();
        }
      }
    }
    
    // Analytics collection (admin and researcher only)
    match /analytics/{document=**} {
      allow read: if isAdmin() || isResearcher();
      allow write: if isAdmin();
    }
    
    // System logs (admin only)
    match /logs/{document=**} {
      allow read: if isAdmin();
      allow write: if isAdmin();
    }
    
    // Default deny all other access
    match /{document=**} {
      allow read, write: if false;
    }
  }
}







